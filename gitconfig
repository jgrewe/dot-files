[user]
	name = Jan Grewe
	email = jan.grewe@g-node.org


[mergetool]
	keepBackup = false

[color]
	ui = true
	interactive = auto

[color "status"]
       added = blue
       changed = red
       untracked = magenta

[alias]
	d = diff --color-word
	ll = log --stat --abbrev-commit
	ls = log --oneline --graph --all --decorate --abbrev-commit
	s = status -sb
	co = checkout

[core]
	editor = /usr/bin/emacs

[push]
	default = simple

[diff]
    mnemonicprefix = true

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
